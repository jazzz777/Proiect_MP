@page
@model Stiri.Pages.Articole.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Articol</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Articol.ID" />
            <div class="form-group">
                <label asp-for="Articol.Titlu" class="control-label"></label>
                <input asp-for="Articol.Titlu" class="form-control" />
                <span asp-validation-for="Articol.Titlu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articol.Data" class="control-label"></label>
                <input asp-for="Articol.Data" class="form-control" />
                <span asp-validation-for="Articol.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articol.Text_Articol" class="control-label"></label>
                <textarea asp-for="Articol.Text_Articol" class="form-control"></textarea>
                <span asp-validation-for="Articol.Text_Articol" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Articol.Aprobat" /> @Html.DisplayNameFor(model => model.Articol.Aprobat)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Articol.JurnalistID" class="control-label"></label>
                <select asp-for="Articol.JurnalistID" class="form-control" asp-items="ViewBag.JurnalistID"></select>
                <span asp-validation-for="Articol.JurnalistID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articol.CategorieID" class="control-label"></label>
                <select asp-for="Articol.CategorieID" class="form-control" asp-items="ViewBag.CategorieID"></select>
                <span asp-validation-for="Articol.CategorieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
